{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [ "es2015", "es2017", "dom"],
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "library",
    "local",
    "temp",
    "build",
    "settings",
    "examples"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}